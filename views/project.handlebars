{{main}}

{{inline "body"}}
  <section class="project">
    <div class="container">
      <h2>{{project.name}}</h2>
      <p>{{project.description}}</p>
      <div class="project-details">
        <p><strong>Created By:</strong> {{project.createdBy}}</p>
        <p><strong>Created At:</strong> {{formatDate project.createdAt}}</p>
      </div>
      <a href="/projects/{{project.id}}/edit" class="btn">Edit Project</a>
    </div>
  </section>
{{/inline}}
